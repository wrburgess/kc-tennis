<div class="d-flex justify-content-between align-items-center bg-light-gray-2 p-3">
  <div>
    <h2 class="m-0">
      <% breadcrumbs.each do |breadcrumb| %>
        <%= breadcrumb %> >
      <% end %>

      <div class="d-inline-flex gap-2 align-items-center">
        <span class="fw-bold">
          <%= @title %>
        </span>

        <% if show_filter_flag? %>
          <i class="bi bi-info-square-fill text-primary fs-4" title="Results are filtered"></i>
        <% end %>
      </div>
    </h2>
  </div>

  <div class="d-flex flex-row align-items-center gap-3">
    <% if page_links? || links? %>
      <div class="row gap-2">
        <% page_links.each do |page_links| %>
          <div class="col-auto">
            <%= page_links %>
          </div>
        <% end %>

        <% links.each do |link| %>
          <div class="col-auto">
            <%= link %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @show_filtering %>
      <div>
        <a href="#" data-bs-toggle="offcanvas" data-bs-target="#filters" aria-controls="filters">
          <i class="bi bi-filter-right fs-2"></i>
        </a>
      </div>
    <% end %>
  </div>
</div>
