<div class="col-6">
  <h2><%= headline %></h2>
</div>
<div class="col-6">
  <%= component("action_button", operation: :new, instance: @instance, classes_append: "float-end me-2") if @new_button %>
  <%= component("action_button", operation: :upload, instance: @instance, classes_append: "float-end me-2") if @upload_button %>
  <%= component("action_button", operation: :new, instance: @instance, text: "Upload New #{@instance.class_name_title}", classes_append: "float-end me-2") if @upload_new_button %>
  <%= component("action_button", operation: :upload_file, instance: @instance, classes_append: "float-end me-2") if @upload_file_button %>
  <%= component("action_button", operation: :export_xlsx, instance: @instance, classes_append: "float-end me-2") if @export_xlsx_button %>
</div>
