<div class="container">
  <div class="row justify-content-center min-vh-100 align-items-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
            <div class="form-floating mb-3">
              <%= f.text_field :email, class: "form-control", id: "email", autocomplete: "off", required: true %>
              <%= f.label :email, class: "form-label" %>
            </div>
            <div class="d-grid gap-2 mb-3">
              <%= f.button :submit, class: "btn btn-secondary w-100" do %>
                <i class="bi bi-check-circle me-2"></i>
                Send Me Reset Password Instructions
              <% end %>
            </div>
          <% end %>
          <div class="mb-3">
            <%= render "devise/shared/links" %>
          </div>
          <div
            class="cf-turnstile"
            data-sitekey="<%= Rails.application.credentials.dig(:cloudflare, :turnstile_site_key) %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
