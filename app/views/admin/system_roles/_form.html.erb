  <%= simple_form_for([:admin, instance], local: true) do |f| %>
    <div class="row">
      <div class="col-12 col-lg-6">
        <% unless instance.new_record? %>
          <%= f.input :id, readonly: true, wrapper: :floating_label_form %>
        <% end %>
        <%= f.input :name, wrapper: :floating_label_form %>
        <%= f.input :abbreviation, wrapper: :floating_label_form %>
        <%= f.input :description, wrapper: :floating_label_form %>
        <%= f.input :notes, as: :text, wrapper: :floating_label_form %>
        <%= f.input :system_group_ids,
            as: :tom_select,
            collection: SystemGroup.options_for_select,
            label: 'System Groups',
            prompt: 'Select groups...',
            autocomplete: 'off',
            multiple: true,
            wrapper: :tom_select_label_inset %>
        <%= f.input :system_permission_ids,
            as: :tom_select,
            collection: SystemPermission.options_for_select,
            label: 'System Permissions',
            prompt: 'Select permissions...',
            autocomplete: 'off',
            multiple: true,
            wrapper: :tom_select_label_inset %>
      </div>
    </div><!-- row -->
    <div class="row">
      <div class="form-group">
        <%= render Admin::ActionButton::Component.new(operation: :cancel_to_show, instance: instance, classes_append: "me-3", public: true) %>
        <%= render Admin::FormButton::Component.new(operation: :submit) %>
      </div>
    </div><!-- row -->
  <% end %>
